# .env.testing.example
# Target environment variables for CI/CD and VM context
# Do not commit real values to the repository!

# Database Configuration
POSTGRES_USER=CHANGE_ME_DB_USER
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD
POSTGRES_DB=CHANGE_ME_DB_NAME
POSTGRES_PORT=5432

# Application Configuration
NODE_ENV=production
PORT=3001

# JWT Secret (Must be a highly secure random string)
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET

# Frontend CORS Origins
FRONTEND_ORIGIN=https://your-production-domain.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=CHANGE_ME_EMAIL_USER
EMAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
EMAIL_FROM=noreply@yourdomain.com

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=CHANGE_ME_TWILIO_SID
TWILIO_AUTH_TOKEN=CHANGE_ME_TWILIO_TOKEN
TWILIO_PHONE_NUMBER=CHANGE_ME_TWILIO_PHONE

# Performance & Logging
LOG_LEVEL=info
PERF_LOG=true
PERF_LOG_THRESHOLD_MS=200
COMPRESS_THRESHOLD=1024
LONG_WAIT_MINUTES=10
